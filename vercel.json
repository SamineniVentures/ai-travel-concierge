{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "45mb" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" }
    // For Next.js, Vercel automatically handles routing for the output of the "frontend/package.json" build.
    // No explicit frontend route is typically needed here if the build target is correct.
  ]
}
